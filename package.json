{
  "name": "u-calculator",
  "private": true,
  "scripts": {
    "cleanup": "yarn && lerna clean --yes && lerna bootstrap && npm run buildAll",
    "lintAll": "lerna run lint --parallel",
    "testAll": "lerna run test --parallel",
    "buildAll": "lerna run build --parallel --scope \"@u-calculator/!(web*)\"",
    "buildAllAndWatch": "lerna run buildWatch --parallel --scope \"@u-calculator/!(web*)\" ",
    "deploy:lib": "npm run buildAll && lerna publish",
    "deploy:web": "node tools/build-app --scope  \"@u-calculator/web\" ",
    "deploy:web-beta": "node tools/build-app --line \"deploy:beta\" --scope  \"@u-calculator/web\" ",
    "deploy:web-admin": "node tools/build-app --scope  \"@u-calculator/web-admin\" ",
    "deploy:web-admin-beta": "node tools/build-app --line \"deploy:beta\" --scope  \"@u-calculator/web-admin\" ",
    "deploy:local": "lerna run deploy:local --parallel --scope \"@u-calculator/@(web*)\"",
    "dev": "npm run cleanup &&  lerna run dev --parallel --scope \"@u-calculator/web*\"",
    "dev:web": "npm --prefix apps/web run dev",
    "dev-web-admin": "npm --prefix apps/web-admin  run dev",
    "tip:upgrade-deps-backend": "lerna add pcmli.umbrella.backend@latest --exact  --scope \"@u-calculator/@(backend*|web*)\"",
    "tip:upgrade-deps-web-ui": "lerna add pcmli.umbrella.web-ui@latest --exact  --scope \"@u-calculator/@(web-ui*|web*)\"",
    "tip:update-package-json": "babel-node tools/update-package-json.js",
    "tip:migrate": "node apps/web-admin/src/migration/manual-exec/migrate-product.mjs"
  },
  "dependencies": {
    "@babel/runtime": "^7.14.0",
    "lodash": "^4.17.21",
    "moment": "^2.22.1",
    "moment-timezone" : "^0.5.33",
    "pcmli.umbrella.uni-core": "^13.3.0",
    "cross-fetch" : "^3.1.4"
  },
  "devDependencies": {
    "@apollo/react-testing": "^4.0.0",
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.15",
    "@babel/node": "^7.13.13",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-react": "^7.13.13",
    "@babel/register": "^7.13.14",
    "@storybook/addons": "^3.4.5",
    "@testing-library/react": "^11.2.5",
    "babel-eslint": "^10.1.0",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "babel-preset-razzle": "^4.0.4",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-dom": "^1.8.2",
    "chai-enzyme": "^1.0.0-beta.0",
    "chai-moment": "^0.1.0",
    "chai-subset": "^1.6.0",
    "chalk": "^4.1.0",
    "concurrently": "^6.0.0",
    "cross-env": "^5.2.0",
    "dotenv": "6.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "eslint": "^7.22.0",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.10.1",
    "eslint-plugin-unused-imports": "^1.1.0",
    "execa": "^5.0.0",
    "figlet": "^1.5.0",
    "fs-extra": "^9.1.0",
    "glob": "^7.1.6",
    "html-webpack-plugin": "4.5.2",
    "husky": "4.3.8",
    "ignore-styles": "^5.0.1",
    "inquirer": "^7.3.3",
    "jsdom": "^16.5.1",
    "jsdom-global": "^3.0.2",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "mini-css-extract-plugin": "0.9.0",
    "mocha": "^8.3.2",
    "moment-timezone-data-webpack-plugin": "^1.5.0",
    "ncp": "^2.0.0",
    "node-html-parser": "^3.1.2",
    "postcss": "8.2.4",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "raf": "^3.4.0",
    "razzle": "^4.0.4",
    "razzle-dev-utils": "^4.0.4",
    "razzle-plugin-bundle-analyzer": "^4.0.4",
    "razzle-plugin-scss": "^4.0.4",
    "react-addons-test-utils": "^15.6.2",
    "react-select-event": "^5.1.0",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "testdouble": "^3.16.1",
    "webpack": "4.46.0",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "3.11.0",
    "yargs": "^16.2.0",
    "cypress": "^7.7.0",
    "eslint-plugin-cypress" : "^2.11.3"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run testAll"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write \"apps/**/src/**/*.js\"",
      "eslint \"apps/**/src/**/*.js\" --fix",
      "prettier --write \"packages/**/src/**/*.js\"",
      "eslint \"packages/**/src/**/*.js\" --fix"
    ]
  }
}
